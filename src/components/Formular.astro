---
import { Image } from "astro:assets";
import Button from "../components/Button.astro";
---

<section class="bg bg-cover bg-center flex justify-center items-center p-6">
  <div class="relative h-full w-full p-32 text-center">
    <!-- Heading -->
    <h3 class="text-h3-d text-plastic-red font-secondary font-semibold mb-6">
      Støt os nu
    </h3>

    <!-- Donation Frequency -->
    <div class="flex justify-center gap-8 mb-6 font-secondary">
      <label class="flex items-center">
        <input
          type="radio"
          name="frequency"
          class="form-radio text-plastic-red mr-2"
          checked
        />
        <span>Maanedligt</span>
      </label>
      <label class="flex items-center">
        <input
          type="radio"
          name="frequency"
          class="form-radio text-plastic-red mr-2"
        />
        <span>En gangs donation</span>
      </label>
    </div>

    <!-- Donation Amounts -->
    <div class="flex justify-center gap-4 mb-6">
      <button
        class="w-20 h-20 rounded-full border-2 border-plastic-red text-black font-regular font-secondary"
        >50 kr.</button
      >
      <button
        class="w-20 h-20 rounded-full border-2 border-plastic-red text-black font-regular font-secondary"
        >100 kr.</button
      >
      <button
        class="w-20 h-20 rounded-full border-2 border-plastic-red text-black font-regular font-secondary"
        >125 kr.</button
      >
    </div>

    <!-- Custom Amount Input -->
    <input
      type="text"
      placeholder="Andet beløb"
      class="border-2 border-plastic-red rounded-full px-4 py-2 text-center w-full mb-6"
    />

    <!-- Donate Button -->
    <div>
      <Button class="flex items-center">
        <div class="flex px-8 py-3 font-body-b">
          <p class="pl-2 font-secondary">Støt nu</p>
        </div>
      </Button>
    </div>
  </div>
</section>

<style>
  .bg {
    background-image: url(/formular.webp); /* Torn paper with polar bear */
    background-position: top center;
    background-size: contain;
    background-repeat: no-repeat;
  }
</style>
